<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/phrase_trash_fragment_language_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp" >

        <Button
            android:id="@+id/phrase_trash_fragment_empty_button"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:enabled="false"
            android:minHeight="0dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="@string/button_empty_trash" />

        <com.appslandia.core.views.LeoSpinner
            android:id="@+id/phrase_trash_fragment_language_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            tools:listitem="@android:layout/simple_spinner_item" />
    </RelativeLayout>

    <include
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@+id/phrase_trash_fragment_language_layout"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="6dp"
        layout="@layout/libs_list_fragment"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>