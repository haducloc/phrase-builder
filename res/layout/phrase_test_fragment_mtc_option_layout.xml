<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.appslandia.phrasebuilder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <com.appslandia.core.views.LeoTextView
        android:id="@+id/phrase_test_fragment_aksing_keyword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="@string/select_keywords"
        android:textStyle="bold"
        android:textSize="@dimen/TextSizeSmallX2"
        app:underlineColor="@color/TestActionDescUnderlineColor" />

    <RelativeLayout
        android:id="@+id/phrase_test_fragment_option1_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phrase_test_fragment_aksing_keyword"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="14dp" >

        <RadioButton
            android:id="@+id/phrase_test_fragment_option1_radiobutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/sample_text" />

        <ImageView
            android:id="@+id/phrase_test_fragment_option1_result_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="24dp"
            android:layout_toRightOf="@+id/phrase_test_fragment_option1_radiobutton"
            android:background="@drawable/libs_bg_view_button"
            android:contentDescription="@string/empty_text"
            android:src="@drawable/ic_test_wrong" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/phrase_test_fragment_option2_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phrase_test_fragment_option1_layout"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="8dp" >

        <RadioButton
            android:id="@+id/phrase_test_fragment_option2_radiobutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/sample_text" />

        <ImageView
            android:id="@+id/phrase_test_fragment_option2_result_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="24dp"
            android:layout_toRightOf="@+id/phrase_test_fragment_option2_radiobutton"
            android:background="@drawable/libs_bg_view_button"
            android:contentDescription="@string/empty_text"
            android:src="@drawable/ic_test_wrong" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/phrase_test_fragment_option3_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phrase_test_fragment_option2_layout"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="8dp" >

        <RadioButton
            android:id="@+id/phrase_test_fragment_option3_radiobutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/sample_text" />

        <ImageView
            android:id="@+id/phrase_test_fragment_option3_result_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="24dp"
            android:layout_toRightOf="@+id/phrase_test_fragment_option3_radiobutton"
            android:background="@drawable/libs_bg_view_button"
            android:contentDescription="@string/empty_text"
            android:src="@drawable/ic_test_wrong" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/phrase_test_fragment_option4_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phrase_test_fragment_option3_layout"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="8dp" >

        <RadioButton
            android:id="@+id/phrase_test_fragment_option4_radiobutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/sample_text" />

        <ImageView
            android:id="@+id/phrase_test_fragment_option4_result_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="24dp"
            android:layout_toRightOf="@+id/phrase_test_fragment_option4_radiobutton"
            android:background="@drawable/libs_bg_view_button"
            android:contentDescription="@string/empty_text"
            android:src="@drawable/ic_test_wrong" />
    </RelativeLayout>

</RelativeLayout>